<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_login"
    tools:context=".Main">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_weight="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_above="@+id/layoutLogin"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="80dp"
            android:id="@+id/layoutLogo">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6"></LinearLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:src="@drawable/ym_title"
                android:scaleType="fitCenter"
                android:layout_weight="1"
                android:layout_margin="10dp" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="6" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="30dp"
            android:background="@drawable/layout_border_menu"
            android:id="@+id/layoutLogin">

            <EditText
                android:layout_width="420dp"
                android:layout_height="60dp"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/emailProfile"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/input_border_login"
                android:gravity="center"
                android:layout_margin="10dp"
                android:hint="Email" />

            <EditText
                android:layout_width="420dp"
                android:layout_height="60dp"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password"
                android:textSize="25dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/input_border_login"
                android:gravity="center"
                android:password="false"
                android:layout_margin="10dp"
                android:hint="Password" />

            <Button
                android:layout_width="300dp"
                android:layout_height="70dp"
                android:text="Login"
                android:id="@+id/login"
                android:textSize="35dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="20dp"
                android:background="@drawable/button_border_login"
                android:textColor="#ff000000" />

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Subscriber"
                android:id="@+id/register"
                android:layout_weight="1"
                android:background="#34ededed" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:text="Recover Password"
                android:id="@+id/recoverPassword"
                android:layout_weight="1"
                android:background="#34ededed" />
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>