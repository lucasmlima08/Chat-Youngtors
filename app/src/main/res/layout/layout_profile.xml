<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:fitsSystemWindows="true" tools:context=".ProfileFriend">

    <android.support.design.widget.AppBarLayout android:layout_height="wrap_content"
        android:layout_width="match_parent" android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.v7.widget.Toolbar android:id="@+id/toolbarProfile"
            android:layout_width="match_parent" android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary" app:popupTheme="@style/AppTheme.PopupOverlay" />

    </android.support.design.widget.AppBarLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context=".ProfileFriend">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/relativeLayout">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:src="@drawable/image_profile"
                    android:id="@+id/imageProfile"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="16dp" />

                <TextView
                    android:id="@+id/nameProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="Name and last name of friend"
                    android:textSize="25sp"
                    android:textStyle="bold"

                    android:layout_below="@+id/imageProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/emailProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="friendemail@host.com"
                    android:textSize="20sp"
                    android:textStyle="normal"

                    android:layout_below="@+id/nameProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/descriptionProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend. This is a description of a friend."
                    android:textSize="22sp"
                    android:layout_below="@+id/emailProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:singleLine="false"
                    android:textStyle="italic"
                    android:textAlignment="inherit" />

                <TextView
                    android:id="@+id/birthProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Day and month and year of birth"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/descriptionProfile"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/genreProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Genre"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/birthProfile"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/cityProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Actual city"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/genreProfile"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/ProfessionProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Profession"
                    android:textSize="25dp"

                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/cityProfile"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/CompanyProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Company"
                    android:textSize="25dp"
                    android:textStyle="normal"

                    android:layout_below="@+id/ProfessionProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/phoneProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Phone number"
                    android:textSize="25dp"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:layout_below="@+id/CompanyProfile"
                    android:textAlignment="center" />

                <TextView
                    android:id="@+id/websiteProfile"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#363636"
                    android:text="Website"
                    android:textSize="25dp"
                    android:textStyle="normal"
                    android:layout_below="@+id/phoneProfile"
                    android:layout_centerHorizontal="true"
                    android:layout_margin="10dp"
                    android:singleLine="false"
                    android:textAlignment="center" />

            </RelativeLayout>
        </ScrollView>
    </RelativeLayout>

</android.support.design.widget.CoordinatorLayout>
