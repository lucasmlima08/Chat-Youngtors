<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="fill_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_margin="5dp"
    card_view:cardCornerRadius="5dp"
    android:layout_height="wrap_content"
    android:id="@+id/friendOffline">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00eaf2ef">

        <LinearLayout
            style="@style/layout_friend"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_friend"
            android:orientation="horizontal"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp">

            <de.hdodenhof.circleimageview.CircleImageView
                style="@style/image_friend"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/imageProfileFriend"
                android:src="@drawable/image_profile"
                android:scaleType="centerCrop" />

            <LinearLayout
                style="@style/layout_center_friend"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1" >

                <TextView
                    style="@style/name_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Name Friend"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textColor="#ff000000"
                    android:id="@+id/nameFriend" />

                <TextView
                    style="@style/status_friend"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Last Message."
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:textStyle="bold"
                    android:textColor="#ff4f4f4f"
                    android:id="@+id/messageFriend" />
            </LinearLayout>

            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="3.1" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="00h00"
                    android:id="@+id/timeFriend"
                    android:textColor="#ff7a7a7a"
                    android:textSize="20dp"
                    android:layout_gravity="right"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>
</android.support.v7.widget.CardView>